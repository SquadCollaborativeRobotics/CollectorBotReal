<launch>
  <!-- Load up the machines to use.  default uses the local machine -->
  <include file="$(find scr_proto)/launch/computers.machine" />

  <!-- Run the arduino code with serial comms -->

  <!-- odometry broadcast node -->
  <node name="collector_odom_broadcaster_node" pkg="scr_proto" type="odom_broadcaster_node"></node>

  <!-- <node name="april_tags_processor" pkg="scr_proto" type="april_tags_processor"></node> -->

  <!-- <include file="$(find freenect_launch)/launch/freenect.launch" /> -->

  <node name="hokuyo_node" pkg="hokuyo_node" type="hokuyo_node">
        <param name="port" value="/dev/ttyACM1"/>
  </node>

  <include file="$(find scr_proto)/launch/static_transforms.launch" />

  <include file="$(find scr_proto)/launch/base_controller_arduino.launch" />

  <!-- Adjust the location of the kinect relative to the baselink here -->
  <node pkg="tf" type="static_transform_publisher" name="camera_link_publisher" args="0.11 0 0.08 0 0 0 base_link camera_link 1000" />
  <!-- Adjust the location of the kinect relative to the baselink here -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_laser_publisher" args="0.11 0 0.08 0 0 0 base_link laser 1000" />

</launch>
