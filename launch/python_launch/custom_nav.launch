<launch>
  <env name="ROSCONSOLE_CONFIG_FILE"
       value="$(find global_planner)/logger.config"/>


  <!-- Load up the machines to use.  default uses the local machine -->
  <!-- <include file="$(find scr_proto)/launch/computers.machine" /> -->

  <!-- Handles the landmark static transforms-->
  <!-- <include file="$(find scr_proto)/launch/static_transforms.launch" /> -->

  <arg name="robot" default="robot1" />
  <arg name="tf_prefix" default="$(arg robot)_tf" />
  <arg name="init_pose_x" default="2" />
  <arg name="init_pose_y" default="0" />

  <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(find scr_proto)/maps/hok1.yaml"> -->
    <!-- <param name="frame_id" value="/map" /> -->
  <!-- </node> -->

  <group ns="$(arg robot)">
     <!-- - Run AMCL  (map -> odom) -->
    <param name="amcl/initial_pose_x" value="$(arg init_pose_x)" />
    <param name="amcl/initial_pose_y" value="$(arg init_pose_y)" />
    <!-- <node pkg="amcl" type="amcl" name="amcl" output="screen"> -->
      <!-- Almost all of the commented out values have the default value of what's shown -->
      <!-- http://wiki.ros.org/amcl -->
      <!-- <param name="global_frame_id" value="/map"/> -->
      <!-- <param name="odom_frame_id" value="/odom"/> -->
      <!-- <param name="base_frame_id" value="/base_link"/> -->
      <!-- <param name="odom_model_type" value="diff"/> -->
      <!-- <param name="use_map_topic" value="true"/> -->
      <!-- <remap from="map" to="/map" /> -->
    <!-- </node> -->
    <!-- - Run AMCL  -->
    <node pkg="amcl" type="amcl" name="amcl" output="screen">
      <param name="odom_frame_id" value="$(arg tf_prefix)/odom"/>
      <param name="base_frame_id" value="$(arg tf_prefix)/base_link"/>
      <param name="global_frame_id" value="/map"/>
      <!-- http://wiki.ros.org/amcl -->
      <param name="odom_model_type" value="diff"/>

      <param name="use_map_topic" value="true"/>
      <remap from="map" to="/map" />

      <!-- Publish scans from best pose at a max of 10 Hz -->
      <param name="transform_tolerance" value="0.2" /> <!-- This is key for sam's laptop -->
      <param name="gui_publish_rate" value="5.0"/>
      <param name="laser_max_beams" value="100"/>
      <param name="min_particles" value="200"/>
      <param name="max_particles" value="700"/>

      <param name="kld_err" value="0.03"/>
      <param name="kld_z" value="0.99"/>
      <param name="update_min_d" value="0.2"/>
      <param name="update_min_a" value="0.7"/>

      <param name="odom_alpha1" value="0.1"/>
      <param name="odom_alpha2" value="0.3"/>
      <param name="odom_alpha3" value="0.1"/>
      <param name="odom_alpha4" value="0.1"/>

      <!-- translation std dev, m -->
      <param name="laser_z_hit" value="0.5"/>
      <param name="laser_z_short" value="0.05"/>
      <param name="laser_z_max" value="0.05"/>
      <param name="laser_z_rand" value="0.5"/>
      <param name="laser_sigma_hit" value="0.2"/>
      <param name="laser_lambda_short" value="0.1"/>
      <param name="laser_lambda_short" value="0.1"/>
      <!-- <param name="laser_model_type" value="likelihood_field"/> -->
      <!-- <param name="laser_model_type" value="beam"/> -->
      <param name="laser_likelihood_max_dist" value="4.5"/>
      <!-- <param name="resample_interval" value="1"/> -->
      <param name="recovery_alpha_slow" value="0.0"/>
      <param name="recovery_alpha_fast" value="0.0"/>
    </node>


    <!-- Move Base Handles interactions between Nav Stack and Robot Hardware -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

      <param name="controller_frequency" value="10.0" />
      <remap from="map" to="/map" />

      <rosparam file="$(find scr_proto)/navstack_cfg/ns/costmap_common_params-collector.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find scr_proto)/navstack_cfg/ns/costmap_common_params-collector.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find scr_proto)/navstack_cfg/ns/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find scr_proto)/navstack_cfg/ns/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find scr_proto)/navstack_cfg/ns/base_local_planner_params-collector.yaml" command="load" />
    </node>
  </group>
</launch>
